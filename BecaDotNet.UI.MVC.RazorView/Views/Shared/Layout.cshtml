<!DOCTYPE html>
<html style="height:100%">
<head style="height:100%">
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <title>Beca .NET - @Page.Title</title>
</head>
<body style="background-color: #808080;">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto" id="menu">
                    @*<li class="nav-item mr-3"><h4><a class="" href="~/Home">Home</a></h4></li>*@
                    <div class="dropdown">
                        <button class="btn btn-light btn-lg dropdown-toggle mr-3" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Usuários
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" href="~/User/List">Listar</a>
                            <a class="dropdown-item" href="~/User/New">Criar</a>
                        </div>
                    </div>


                    @if (BecaDotNet.UI.MVC.RazorView.Models.CurrentUser.UserDate.UserTypeId == 1)
                    {
                        <div class="dropdown">
                            <button class="btn btn-light btn-lg dropdown-toggle mr-3" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Clientes
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="~/Cliente/List">Listar</a>
                                <a class="dropdown-item" href="~/Cliente/New/0">Criar</a>
                            </div>
                        </div>
                        <div class="dropdown">
                            <button class="btn btn-light btn-lg dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Projetos
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="~/Projeto/List">Listar</a>
                                <a class="dropdown-item" href="~/Projeto/New/0">Criar</a>
                            </div>
                        </div>
                    }
                    <a class="btn btn-light btn-lg" href="~/User/Entry">Registro</a>
                </ul>
            </div>
            <div class="col-4">
                <h4><a class="nav-link" href="#">Olá, @BecaDotNet.UI.MVC.RazorView.Models.CurrentUser.UserDate.Name</a></h4>
                @Html.ActionLink("Sair", "DoLogout", "Login")
            </div>
        </nav>
    </header>
    <div id="body">
        @RenderBody()
    </div>
</body>
</html>
