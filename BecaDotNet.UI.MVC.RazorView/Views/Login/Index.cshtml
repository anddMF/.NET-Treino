@{
    Layout = null;
}
<!DOCTYPE html>
<html style="height:100%">
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <title>Index</title>
</head>
<body>
    <div class="container shadow col-md-4 mt-4 p-5" style="border-radius: 10px; background-color:white;background-color: #21D4FD;background-image: linear-gradient(19deg, #21D4FD 0%, #B721FF 100%);height:90%">
        <h1>Login</h1>
        @using (Html.BeginForm("Index", "Login", FormMethod.Post, null))
        {
            <input type="text" class="form-control mb-3 bg-dark text-white" id="txtLogin" placeholder="Login" style="border:none" required name="login"/>
            <input type="password" class="form-control mb-3 bg-dark text-white" id="txtPassword" placeholder="Senha" style="border:none" required name="password"/>

            <button id="btnLogin" class="btn col-md-6 btn-dark btn-block">Login</button>
            <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
        }
        @if (ViewBag.LoginError != null)
        {
        <div id="dvAuthError">
            @foreach (var m in ViewBag.LoginError) {
            <p>@m</p>
            }
        </div>
        }
    </div>
</body>
</html>
