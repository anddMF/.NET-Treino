@model IEnumerable<BecaDotNet.UI.MVC.RazorView.Models.ViewModel.UserViewModel>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/Layout.cshtml";
    Page.Title = "Users";
}

<div class="col-10 mx-auto shadow mb-4 mt-4 p-5" style="border-radius: 10px; background-color:white">
    <h2>List usuários</h2>
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Login</th>
                <th scope="col">Projeto</th>
                <th scope="col">Superior</th>
                <th scope="col">Registro</th>
                <th scope="col">Tipo</th>
                <th scope="col">Ativo</th>
                <th scope="col">Opções</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.NomeUser</td>
                    <td>@item.LoginUser</td>

                    <td>@item.ProjNome</td>
                    <td>@item.SuperiorNome</td>
                    <td>@item.GetEntity().RegisterDate</td>
                    <td>@item.GetEntity().UserTypeId</td>
                    <td>@item.IsActive</td>

                    <td>@Html.ActionLink("Editar", "MakeEdit", "User", new { id = item.Id }, new { @class = "btn btn-block btn-outline-info" })</td>
                    <td>
                        @Html.ActionLink("Remover", "RemoveUser", "User", new { id = item.Id }, new { @class = "btn btn-outline-danger" })
                        @if (item.ProjetoAtualId > 0)
                        {
                            @Html.ActionLink("Projetos", "MostrarProjetos", "User", new { id = item.Id }, new { @class = "btn btn-success" })
                        }
                    </td>

                </tr>
            }

        </tbody>
    </table>
</div>
